doctype html
html
  head
    title JavascriptLingvocards
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')

    link(rel='stylesheet', href='/css/cardsstyle.css')
    link(rel='stylesheet', href='/css/materialize.css')
    link(rel='stylesheet' href='/css/style.css')

  body
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') JavascriptLingvocards
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            if user
              li
                a(href='/own') #{__('HOME')}
              li
                a(href='/cards/add') #{__('ADD')}
          ul.nav.navbar-nav.navbar-right
            if user
              li
                a(href='/users/logout') #{__('LOGOUT')}
            else
              li
                a(href='/users/register') #{__('REGISTER')}
              li
                a(href='/users/login') #{__('LOGIN')}
            li
              - var lang = locale
              if lang == "en"
                a(href=`/ru` class='language_icon')
                  img(src='/images/uk.png')
              else
                a(href=`/en` class='language_icon')
                  img(src='/images/russian.png')
    .container
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      hr
      footer
        p Ekaterina Mikhailova &copy; 2018
    script(src='/js/materialize.js')
    script(src='/bower_components/jquery/dist/jquery.js')
    //script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')

