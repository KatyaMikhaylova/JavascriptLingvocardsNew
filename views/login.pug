extends layout

block content
  h1 #{__('LOGIN')}
  form(method='POST', action='/users/login')
    #form-group
      label #{__('UNAME')}
      input.form-control(name='username',type='text')
    #form-group
      label #{__('PSWD')}
      input.form-control(name='password',type='password')
    br
    input.btn.btn-primary(type='submit', value="OK")
